# ================================================
# Google Gemini API Configuration
# ================================================
# Copy this file to .env and fill in your actual values

# Google Gemini API Key (REQUIRED)
# Get this from: https://aistudio.google.com/app/apikey
# Example: AIzaSyABC123...
GOOGLE_API_KEY=your_api_key_here

# ================================================
# Model Configuration (Optional)
# ================================================

# Default Model Selection
# Supported values: gemini-pro, gemini-1.5-flash
# gemini-1.5-flash: Faster, optimized for most tasks (recommended)
# gemini-pro: More capable, better for complex tasks
DEFAULT_MODEL=gemini-1.5-flash

# ================================================
# Generation Parameters (Optional)
# ================================================

# Temperature Setting (0.0 - 1.0)
# Lower values (0.0-0.3): More deterministic, focused
# Medium values (0.4-0.7): Balanced creativity
# Higher values (0.8-1.0): More creative, diverse
TEMPERATURE_DEFAULT=0.7

# Maximum Tokens
# Maximum number of tokens in response
# Range: 1 - 4096
MAX_TOKENS_DEFAULT=2048

# ================================================
# API Configuration (Optional)
# ================================================

# Request Timeout (in seconds)
REQUEST_TIMEOUT_SECONDS=30

# Rate Limiting
# Maximum requests per minute
REQUESTS_PER_MINUTE=60

# ================================================
# Retry Configuration (Optional)
# ================================================

# Maximum number of retry attempts for failed requests
MAX_RETRIES=3

# Initial delay between retries (in seconds)
RETRY_DELAY_SECONDS=1.0

# Exponential backoff multiplier
RETRY_BACKOFF_FACTOR=2.0

# Maximum wait time between retries (in seconds)
RETRY_MAX_WAIT_SECONDS=60.0

# ================================================
# Application Configuration (Optional)
# ================================================

# Logging Level
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable development mode
# Set to False in production
DEV_MODE=True
